{{#if @href}}
  <a
    class="auk-button {{this.skin}} {{this.size}} {{this.layout}} {{this.disabled}} {{this.block}}"
    href={{@href}}
    disabled={{@disabled}}
    ...attributes
  >
    <WebComponents::AuButton::InnerLayout @layout={{@layout}} @icon={{@icon}} @size={{@size}}>
      {{yield}}
    </WebComponents::AuButton::InnerLayout>
  </a>
{{else}}
  <button
    class="auk-button {{this.skin}} {{this.size}} {{this.layout}} {{this.disabled}} {{this.block}}"
    type="button"
    disabled={{@disabled}}
    ...attributes
  >
    <WebComponents::AuButton::InnerLayout @layout={{@layout}} @icon={{@icon}} @size={{@size}}>
      {{yield}}
    </WebComponents::AuButton::InnerLayout>
  </button>
{{/if}}